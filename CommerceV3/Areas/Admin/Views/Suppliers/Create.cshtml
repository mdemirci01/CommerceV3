@model CommerceV3.Models.Supplier

@{
    ViewData["Title"] = "Yeni Tedarikçi";
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegionId" class="control-label"></label>
                <select asp-for="RegionId" class="form-control" asp-items="ViewBag.RegionId">
                    <option value="">Bölge seçiniz</option>
                </select>
            </div>
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="CreateDate" />
            <input type="hidden" asp-for="UpdatedBy" />
            <input type="hidden" asp-for="UpdateDate" />
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-sm btn-primary" />
                <a asp-action="Index" class="btn btn-sm btn-danger">İptal</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}