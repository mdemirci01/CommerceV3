@model CommerceV3.Models.Brand

@{
    ViewData["Title"] = "Marka Düzenle: " + Model.Name;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Logo))
                {
                    <img src="~/Uploads/@Model.Logo" width="150" /><br />
                }
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" type="hidden" />
                <input type="file" name="upload" class="form-control" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-sm btn-primary" />
                <a asp-action="Index" class="btn btn-sm btn-danger">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
